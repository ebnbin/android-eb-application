<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/eb_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/windowTitleStyle"
        android:paddingTop="18dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"/>
    <ScrollView
        android:id="@+id/eb_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:scrollbarStyle="outsideOverlay"
        android:clipToPadding="false"
        android:layout_marginTop="18dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            <TextView
                android:id="@+id/eb_slogan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>
            <ImageView
                android:id="@+id/eb_icon"
                android:layout_gravity="center_horizontal"
                android:layout_width="128dp"
                android:layout_height="128dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:gravity="center"
                android:minHeight="48dp">
                <TextView
                    android:id="@+id/eb_version_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@android:style/TextAppearance.Material"/>
                <TextView
                    android:id="@+id/eb_version_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginStart="4dp"
                    style="@android:style/TextAppearance.Material"/>
            </LinearLayout>
            <TextView
                android:id="@+id/eb_link_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:visibility="gone"
                style="@android:style/TextAppearance.Material.Subhead"/>
            <TextView
                android:id="@+id/eb_link_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:visibility="gone"
                style="@android:style/TextAppearance.Material.Subhead"/>
            <TextView
                android:id="@+id/eb_link_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:visibility="gone"
                style="@android:style/TextAppearance.Material.Subhead"/>
            <TextView
                android:id="@+id/eb_link_ebnbin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                style="@android:style/TextAppearance.Material.Subhead"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
