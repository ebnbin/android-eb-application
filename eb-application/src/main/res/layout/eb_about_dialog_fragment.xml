<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eb_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:clipToPadding="false"
    android:scrollbarStyle="outsideOverlay">
    <RelativeLayout
        android:id="@+id/eb_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/eb_icon"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/app_icon_128"/>
        <TextView
            style="?android:attr/windowTitleStyle"
            android:id="@+id/eb_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eb_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/app_label"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/eb_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eb_label"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/app_slogan"
            android:textSize="12sp"/>
        <TextView
            style="@android:style/TextAppearance.Material"
            android:id="@+id/eb_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eb_slogan"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:minHeight="48dp"
            android:gravity="center_vertical"/>
        <TextView
            style="@android:style/TextAppearance.Material"
            android:id="@+id/eb_version_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/eb_version_name"
            android:layout_alignTop="@id/eb_version_name"
            android:layout_marginStart="-24dp"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:visibility="gone"/>
        <TextView
            style="@android:style/TextAppearance.Material.Subhead"
            android:id="@+id/eb_links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eb_version_name"
            android:gravity="center_vertical"
            android:text="@string/app_links"
            android:autoLink="all"
            android:lineSpacingMultiplier="1.2"
            android:visibility="visible"/>
        <TextView
            style="@android:style/TextAppearance.Material.Subhead"
            android:id="@+id/eb_links_ebnbin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eb_links"
            android:gravity="center_vertical"
            android:text="@string/eb_links"
            android:autoLink="all"
            android:lineSpacingMultiplier="1.2"/>
    </RelativeLayout>
</ScrollView>
