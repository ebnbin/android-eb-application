<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base light theme. -->
    <style name="EBLightTheme" parent="Theme.Design.Light">
        <item name="android:windowBackground">@color/eb_light_window_background</item>
        <item name="colorPrimary">@color/eb_light_primary</item>
        <item name="colorPrimaryDark">@color/eb_light_primary_dark</item>
        <item name="colorAccent">@color/eb_light_accent</item>
        <item name="ebColorHint">@color/eb_light_hint</item>
    </style>
    <!-- Base dark theme. -->
    <style name="EBDarkTheme" parent="Theme.Design">
        <item name="android:windowBackground">@color/eb_dark_window_background</item>
        <item name="colorPrimary">@color/eb_dark_primary</item>
        <item name="colorPrimaryDark">@color/eb_dark_primary_dark</item>
        <item name="colorAccent">@color/eb_dark_accent</item>
        <item name="ebColorHint">@color/eb_dark_hint</item>
    </style>
</resources>
