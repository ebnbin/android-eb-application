<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ********************************************************************************************************** -->
    <eat-comment/>

    <!-- ActionBar icons. -->
    <attr name="ebColorIcon" format="color"/>
    <attr name="ebColorIconDisabled" format="color"/>
    <!-- Placeholders. -->
    <attr name="ebColorPlaceholder" format="color"/>
    <!-- Card. -->
    <attr name="ebColorCard" format="color"/>

    <!-- ********************************************************************************************************** -->
    <eat-comment/>

    <!-- Material palettes. -->
    <eat-comment/>
    <color name="material_pink_a100">#ff80ab</color>
    <color name="material_pink_a200">#ff4081</color>
    <color name="material_cyan_500">#00bcd4</color>
    <color name="material_cyan_700">#0097a7</color>
    <color name="material_cyan_900">#006064</color>
    <color name="material_blue_gray_50">#eceff1</color>
    <color name="material_blue_gray_900">#263238</color>

    <!-- Colors with alpha. -->
    <eat-comment/>
    <color name="black_38">#61000000</color>
    <color name="black_54">#8a000000</color>
    <color name="white_50">#80ffffff</color>
    <color name="material_blue_gray_50_20">#33eceff1</color>
    <color name="material_blue_gray_900_20">#33263238</color>

    <!-- Launcher icon background. -->
    <color name="eb_icon_background">@color/material_cyan_500</color>

    <!-- Window background. -->
    <eat-comment/>
    <color name="eb_window_background_light">@color/material_blue_gray_50</color>
    <color name="eb_window_background_dark">@color/material_blue_gray_900</color>

    <!-- Primary. -->
    <eat-comment/>
    <color name="eb_primary_light">@color/material_cyan_500</color>
    <color name="eb_primary_dark">@color/material_cyan_700</color>

    <!-- Darker secondary. -->
    <eat-comment/>
    <color name="eb_primary_dark_light">@color/material_cyan_700</color>
    <color name="eb_primary_dark_dark">@color/material_cyan_900</color>

    <!-- Accent. -->
    <eat-comment/>
    <color name="eb_accent_light">@color/material_pink_a200</color>
    <color name="eb_accent_dark">@color/material_pink_a100</color>

    <!-- ActionBar icons in normal state. -->
    <eat-comment/>
    <color name="eb_icon_normal_light">@color/black_54</color>
    <color name="eb_icon_normal_dark">@color/eb_white</color>

    <!-- ActionBar icons in disabled state. -->
    <eat-comment/>
    <color name="eb_icon_disabled_light">@color/black_38</color>
    <color name="eb_icon_disabled_dark">@color/white_50</color>

    <!-- Placeholders. -->
    <eat-comment/>
    <color name="eb_placeholder_light">@color/material_blue_gray_900_20</color>
    <color name="eb_placeholder_dark">@color/material_blue_gray_50_20</color>

    <!-- Card. -->
    <color name="eb_card_light">#ffffff</color>
    <color name="eb_card_dark">#424242</color>

    <!-- ********************************************************************************************************** -->
    <eat-comment/>

    <dimen name="eb_task_description_icon_size">48dp</dimen>

    <!-- 56dp (actionBarSize) * 2 + 24dp (windowTranslucentStatus = true 时 statusBarSize). -->
    <dimen name="eb_fragment_action_bar_min_height_collapsing_toolbar_layout_content">136dp</dimen>

    <!-- ********************************************************************************************************** -->
    <eat-comment/>

    <string name="app_label">EB Application</string>
    <string name="app_slogan"/>
    <string name="app_links"/>
    <string name="eb_ok">确定</string>
    <string name="eb_about">关于</string>
    <string name="eb_web_view_open_in_browser">在浏览器中打开</string>
    <string name="eb_web_view_url_error">无法打开 URL</string>
    <string name="eb_web_view_copy_url">复制 URL</string>
    <string name="eb_links">https://github.com/ebnbin</string>
    <string name="eb_easter_egg">　</string>
    <string name="eb_ebnbin">ebnbin</string>
    <string name="eb_state_view_hint_loading">正在加载</string>
    <string name="eb_state_view_hint_failure">未知异常</string>
    <string name="eb_state_view_hint_no_data">没有数据</string>
    <string name="eb_double_back_finish">再按一次退出</string>

    <!-- ********************************************************************************************************** -->
    <eat-comment/>

    <!-- Base application theme. -->
    <style name="EBAppTheme" parent="Theme.Design.NoActionBar">
        <item name="android:windowBackground">@drawable/eb_app_window_background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/eb_primary_light</item>
        <item name="colorPrimaryDark">@color/eb_primary_dark_light</item>
        <item name="colorAccent">@color/eb_accent_light</item>
        <item name="ebColorIcon">@color/eb_icon_dark</item>
        <item name="ebColorPlaceholder">@color/eb_placeholder_dark</item>
    </style>

    <!-- Base light theme. -->
    <style name="EBLightTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowBackground">@color/eb_window_background_light</item>
        <item name="colorPrimary">@color/eb_primary_light</item>
        <item name="colorPrimaryDark">@color/eb_primary_dark_light</item>
        <item name="colorAccent">@color/eb_accent_light</item>
        <item name="ebColorIcon">@color/eb_icon_light</item>
        <item name="ebColorPlaceholder">@color/eb_placeholder_light</item>
        <item name="ebColorIconDisabled">@color/eb_icon_disabled_light</item>
        <item name="ebColorCard">@color/eb_card_light</item>
    </style>
    <!-- Base dark theme. -->
    <style name="EBDarkTheme" parent="Theme.Design.NoActionBar">
        <item name="android:windowBackground">@color/eb_window_background_dark</item>
        <item name="colorPrimary">@color/eb_primary_dark</item>
        <item name="colorPrimaryDark">@color/eb_primary_dark_dark</item>
        <item name="colorAccent">@color/eb_accent_dark</item>
        <item name="ebColorIcon">@color/eb_icon_dark</item>
        <item name="ebColorPlaceholder">@color/eb_placeholder_dark</item>
        <item name="ebColorIconDisabled">@color/eb_icon_disabled_dark</item>
        <item name="ebColorCard">@color/eb_card_dark</item>
    </style>
</resources>
