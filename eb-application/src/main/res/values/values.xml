<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- actionBarSize 56dp * 2 + statusBarSize 24dp + 8dp. -->
    <dimen name="eb_min_height_collapsing_toolbar_layout_content_container">144dp</dimen>

    <!-- Base light theme. -->
    <style name="EBLightTheme" parent="android:Theme.Material.Light">
        <item name="android:windowBackground">@color/eb_light_window_background</item>
        <item name="android:colorPrimary">@color/eb_light_primary</item>
        <item name="android:colorPrimaryDark">@color/eb_light_primary_dark</item>
        <item name="android:colorAccent">@color/eb_light_accent</item>
        <item name="ebColorHint">@color/eb_light_hint</item>
    </style>
    <!-- Base dark theme. -->
    <style name="EBDarkTheme" parent="android:Theme.Material">
        <item name="android:windowBackground">@color/eb_dark_window_background</item>
        <item name="android:colorPrimary">@color/eb_dark_primary</item>
        <item name="android:colorPrimaryDark">@color/eb_dark_primary_dark</item>
        <item name="android:colorAccent">@color/eb_dark_accent</item>
        <item name="ebColorHint">@color/eb_dark_hint</item>
    </style>
</resources>
